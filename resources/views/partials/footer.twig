<section id="footer">

    <ul>
        <li class="logo">
            <a href="http://pyrocms.com" target="_blank">
                {{ img('theme::img/logo-dark-transparent.png').heighten(20)|raw }}
            </a>
        </li>
        <li class="version">
            Version 3.0 Beta3
        </li>
        <li class="copyright">
            &copy; {{ 'now'|date('Y') }} PyroCMS, Inc
        </li>
        <li class="footprint">
            {{ request_time() }} <span>|</span> {{ memory_usage() }}
        </li>
    </ul>

    <ul class="pull-right">
        <li class="language">
            <select class="c-select" onchange="window.location = '?_locale=' + this.value;">
                {% for iso in config('streams::locales.supported')|keys %}
                    <option value="{{ iso }}" {{ config('app.locale') == iso ? 'selected' }}>
                        {{ trans('streams::locale.' ~ iso ~ '.name') }}
                    </option>
                {% endfor %}
            </select>
        </li>
        <li class="help">
            <a class="btn btn-danger btn-inverse btn-sm" data-toggle="modal" data-target="#modal-help">
                {{ icon('question-circle') }} Help
            </a>
        </li>
    </ul>

</section>

{% include "theme::partials/help" %}
