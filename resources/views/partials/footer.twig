<section id="footer">

    <ul>
        <li class="logo">
            <a href="http://pyrocms.com" target="_blank">
                {{ img('theme::img/logo-dark-transparent.png').heighten(20)|raw }}
            </a>
        </li>
        <li class="version">
            Version 3.0 Beta3
        </li>
        <li class="copyright">
            &copy; {{ 'now'|date('Y') }} PyroCMS, Inc
        </li>
        <li class="footprint">
            {{ request_time() }} <span>|</span> {{ memory_usage() }}
        </li>
        <li class="help">
            <a class="btn btn-danger btn-inverse btn-sm pull-right" target="_blank" data-toggle="modal" data-target="#modal-help">
                {{ icon('question-circle') }} Help
            </a>
        </li>
    </ul>

</section>

